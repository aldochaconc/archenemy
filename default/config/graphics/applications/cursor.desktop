# Desktop entry for Cursor with hardware acceleration optimization
# --use-gl=egl flag fixes slow startup on hybrid graphics systems
[Desktop Entry]
Type=Application
Name=Cursor
Comment=The AI Code Editor.
GenericName=Text Editor
Icon=cursor
Exec=cursor --use-gl=egl %F
Terminal=false
Categories=TextEditor;Development;IDE;
MimeType=text/plain;inode/directory;application/x-cursor-workspace;
StartupWMClass=Cursor
StartupNotify=true
Actions=new-empty-window;

[Desktop Action new-empty-window]
Name=New Empty Window
Exec=cursor --use-gl=egl --new-window %F
Icon=cursor
