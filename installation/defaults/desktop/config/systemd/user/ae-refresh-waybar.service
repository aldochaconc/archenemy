[Unit]
Description=Archenemy refresh Waybar defaults
ConditionPathExists=%h/.config/archenemy/ae-cli/ae
ConditionPathIsDirectory=%h/.config/archenemy/installation/defaults/desktop/config/waybar

[Service]
Type=oneshot
ExecStart=%h/.config/archenemy/ae-cli/ae refresh waybar

[Install]
WantedBy=default.target
